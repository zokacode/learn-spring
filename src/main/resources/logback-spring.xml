<configuration>
  <property name="LOG_HOME" value="logs" />

	<property name="PATTERN"
		value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %cyan[%thread] %highlight([%level]) %clr([%logger:%L]){cyan} %msg%n" />

	<conversionRule conversionWord="clr"
		converterClass="org.springframework.boot.logging.logback.ColorConverter" />


  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_HOME}/app.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <!-- 檔案命名模式：app.2025-11-11.0.log.zip -->
      <fileNamePattern>${LOG_HOME}/archive/app.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
      <!-- 每個檔案最大 10MB -->
      <maxFileSize>10MB</maxFileSize>
      <!-- 保留 7 天 -->
      <maxHistory>7</maxHistory>
    </rollingPolicy>
		<!-- <layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${PATTERN}</pattern>
		</layout> -->
    <encoder>
      <charset>UTF-8</charset>
      <pattern>${PATTERN}</pattern>
    </encoder>
  </appender>

  <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_HOME}/error.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<FileNamePattern>
				${LOG_HOME}/archive/error_%d{yyyy-MM-dd}.%i.log.zip
			</FileNamePattern>
      <maxFileSize>10MB</maxFileSize>
			<maxHistory>7</maxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>${PATTERN}</pattern>
		</layout>
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <root level="INFO">
		<appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
		<appender-ref ref="ERROR_FILE" />
  </root>
</configuration>